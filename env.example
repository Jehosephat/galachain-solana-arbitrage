# SOL Arbitrage Bot Environment Configuration

# Logging
LOG_LEVEL=info
LOG_FILE=logs/arbitrage-bot.log
NODE_ENV=development

# GalaChain Configuration
GALACHAIN_PRIVATE_KEY=your_gala_private_key_here
GALACHAIN_WALLET_ADDRESS=your_gala_wallet_address_here

# Solana Configuration
SOLANA_PRIVATE_KEY=your_solana_private_key_here
SOLANA_WALLET_ADDRESS=your_solana_wallet_address_here

# External API Keys
COINGECKO_API_KEY=your_coingecko_api_key_here
JUPITER_API_KEY=your_jupiter_api_key_here

# Jupiter Ultra Swap API (Optional - for dynamic rate limits)
# Get free API key at https://portal.jup.ag/
# Ultra Swap has dynamic rate limits that scale with swap volume (no payment required)
USE_JUPITER_ULTRA=false
JUPITER_ULTRA_API_KEY=your_jupiter_ultra_api_key_here

# Monitoring
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_DEX_WEBHOOK_URL=your_slack_dex_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Configuration Overrides (optional)
# Trading Parameters
MIN_EDGE_BPS=30
MAX_SLIPPAGE_BPS=50
RISK_BUFFER_BPS=10
MAX_PRICE_IMPACT_BPS=50
COOLDOWN_MINUTES=5
MAX_DAILY_TRADES=100

# Bridging Parameters
BRIDGE_INTERVAL_MINUTES=30
BRIDGE_THRESHOLD_USD=100

# Monitoring Parameters
INVENTORY_FLOOR_USD=50
BRIDGE_TIMEOUT_MINUTES=60

# Network Overrides (optional)
GALACHAIN_RPC_URL=https://gateway-mainnet.galachain.com/
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Optional: Use a separate RPC endpoint for balance checks (e.g., premium tier for getTokenAccountsByOwner)
# If not set, will use SOLANA_RPC_URL
SOLANA_BALANCE_RPC_URL=

# Gala endpoints (descriptive GC_* scheme)
GC_CONNECT_BASE_URL=https://dex-api-platform-dex-prod-gala.gala.com
GC_DEX_API_BASE_URL=https://dex-api-platform-dex-prod-gala.gala.com
GC_DEX_BASE_URL=https://api-galaswap.gala.com

# Paths (override only if needed)
GC_PATH_REQUEST_BRIDGE_OUT=/v1/RequestTokenBridgeOut
GC_PATH_BRIDGE_TOKEN_OUT=/v1/BridgeTokenOut
GC_PATH_BRIDGE_CONFIGS=/v1/connect/bridge-configurations
GC_PATH_BRIDGE_STATUS=/v1/bridge/status
GC_PATH_BRIDGE_FEE=/v1/bridge/fee
GC_PATH_FETCH_BALANCES=/galachain/api/asset/token-contract/FetchBalances

# Absolute URL overrides (for debugging/special routing)
GC_URL_FETCH_BALANCES=
GC_URL_BRIDGE_STATUS=
GC_URL_BRIDGE_FEE=

# Solana bridge config
GC_SOL_BRIDGE_PROGRAM=BRiDgE111111111111111111111111111111111111
SOL_BRIDGE_AMOUNT_SOL=0.001
