{
  "name": "sol-arbitrage-bot",
  "version": "0.1.0",
  "description": "Cross-chain arbitrage bot that detects price discrepancies between GalaChain and Solana, executes paired trades, and automatically manages inventory via bridging. All profits tracked in GALA.",
  "main": "dist/run-bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/run-bot.js",
    "dev": "ts-node src/run-bot.ts",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "setup": "node scripts/setup.js",
    "analyze": "ts-node src/analyze-trades.ts",
    "analyze:date": "ts-node src/analyze-trades.ts",
    "balances": "ts-node src/check-balances.ts"
  },
  "keywords": [
    "arbitrage",
    "galachain",
    "solana",
    "trading",
    "bot",
    "cross-chain",
    "defi",
    "cryptocurrency",
    "automated-trading",
    "bridge",
    "dex"
  ],
