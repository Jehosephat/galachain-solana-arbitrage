    "@solana/web3.js": "^1.98.4",
    "axios": "^1.6.0",
    "bignumber.js": "^9.3.1",
    "bs58": "^6.0.0",
    "dotenv": "^17.2.3",
    "elliptic": "^6.6.1",
    "ethers": "^6.15.0",
